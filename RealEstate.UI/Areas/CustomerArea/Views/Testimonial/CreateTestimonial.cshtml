@using RealEstate.UI.Areas.AdminArea.Models.TestimonialVMs
@model CreateTestimonialVM


<h2>Create Testimonial</h2>

<form asp-action="CreateTestimonial" method="post">
    <div class="form-group">
        <label asp-for="Comment" class="control-label">Comment</label>
        <textarea asp-for="Comment" class="form-control"></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
